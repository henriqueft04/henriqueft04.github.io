---
import Icon from "~/components/Icon.astro";
import type { CompatibilityItem } from "~/types";

export interface Props {
  items: Array<CompatibilityItem>;
  title: string;
  url: string;
}

const { items, title, url } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <div class="relative border border-primary rounded-lg bg-white px-6 pb-4 pt-8">
    <h3
      class="absolute right-4 top-0 -translate-y-1/2 rounded-full border border-primary bg-white px-4 py-1 uppercase tracking-tight text-xs text-primary"
    >
      {title}
    </h3>
    <ul class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6">
      {
        items.map((item) => (
          <li>
            {item.url ? (
              <a class="flex flex-col items-center gap-2" href={item.url}>
                <Icon class="size-12 text-primary" name={item.icon} />
                <span>{item.title}</span>
              </a>
            ) : (
              <div class="flex flex-col items-center gap-2">
                <Icon class="size-12 text-primary" name={item.icon} />
                <span>{item.title}</span>
              </div>
            )}
          </li>
        ))
      }
    </ul>
  </div>
</div>
